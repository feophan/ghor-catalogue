<button
  id="back-to-top"
  class="fixed bottom-5 right-5 bg-primary text-primary-content p-2 rounded-full shadow-lg transition-opacity duration-300 opacity-0 invisible hover:bg-gray-300 active:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-300 hover:cursor-pointer"
  aria-label="Back to top"
>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
  </svg>
</button>

<script>
  const backToTopButton = document.getElementById('back-to-top');

  function toggleBackToTopButton() {
    if (window.scrollY > 300) {
      backToTopButton?.classList.remove('opacity-0', 'invisible');
      backToTopButton?.classList.add('opacity-100', 'visible');
    } else {
      backToTopButton?.classList.add('opacity-0', 'invisible');
      backToTopButton?.classList.remove('opacity-100', 'visible');
    }
  }

  function scrollToTop() {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
    // Remove the hash from the URL without reloading
    if (window.location.hash) {
      history.replaceState(null, '', window.location.pathname + window.location.search);
    }
  }

  window.addEventListener('scroll', toggleBackToTopButton);
  backToTopButton?.addEventListener('click', scrollToTop);
</script>