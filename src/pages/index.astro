---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-6xl w-full">
    <h1 class="text-3xl font-bold mb-8 text-center">Ghor Catalogue</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Disabled Card: Lexicon -->
      <div class="bg-gray-100 text-gray-400 rounded-xl shadow p-6 text-center cursor-not-allowed">
        <span class="text-xl font-semibold">Lexicon</span>
      </div>

      <!-- Disabled Card: Corpus -->
      <div class="bg-gray-100 text-gray-400 rounded-xl shadow p-6 text-center cursor-not-allowed">
        <span class="text-xl font-semibold">Corpus</span>
      </div>

      <!-- Active Card: Script Catalogue -->
      <a href="/script" class="bg-white hover:bg-blue-50 text-blue-800 rounded-xl shadow p-6 text-center transition-colors">
        <span class="text-xl font-semibold">Script Catalogue</span>
      </a>
    </div>
  </div>
</main>


</Layout>

